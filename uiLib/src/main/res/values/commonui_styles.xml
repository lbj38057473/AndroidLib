<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.CommonUiTheme" parent="@android:style/Widget" />
    <style name="Widget.CommonUiTheme.Light" />

    <style name="Widget.CommonUiTheme.HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">?attr/commonuiDividerMargin</item>
        <item name="android:layout_marginBottom">?attr/commonuiDividerMargin</item>
        <item name="android:background">?attr/commonuiDividerColor</item>
    </style>

    <style name="Widget.CommonUiTheme.ActivityMargin">
        <item name="android:paddingLeft">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingRight">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingTop">?attr/commonuiActivityVerticalMargin</item>
        <item name="android:paddingBottom">?attr/commonuiActivityVerticalMargin</item>
    </style>

    <style name="Widget.CommonUiTheme.ScrollView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.CommonUiTheme.GridView" parent="Widget.CommonUiTheme.ScrollView">
        <item name="android:columnWidth">?attr/commonuiGridEntriesItemWidth</item>
        <item name="android:horizontalSpacing">?attr/commonuiGridEntriesSpacing</item>
        <item name="android:verticalSpacing">?attr/commonuiGridEntriesSpacing</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="Widget.CommonUiTheme.GridEntries" parent="Widget.CommonUiTheme.GridView">
        <item name="android:paddingLeft">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingRight">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingTop">?attr/commonuiActivityVerticalMargin</item>
        <item name="android:paddingBottom">?attr/commonuiActivityVerticalMargin</item>
    </style>

    <style name="Widget.CommonUiTheme.GridEntriesItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/commonuiGridEntriesItemHeight</item>
        <item name="android:background">?attr/commonuiGridEntriesItemBkg</item>
        <item name="android:textAppearance">?attr/commonuiGridEntriesItemTextAppearance</item>
    </style>

    <style name="Widget.CommonUiTheme.ListView" parent="Widget.CommonUiTheme.ScrollView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="Widget.CommonUiTheme.ListViewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">?attr/commonuiListItemVerticalMargin</item>
        <item name="android:paddingBottom">?attr/commonuiListItemVerticalMargin</item>
    </style>

    <style name="Widget.CommonUiTheme.ListEntries" parent="Widget.CommonUiTheme.ListView">
        <item name="android:paddingLeft">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingRight">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingTop">?attr/commonuiActivityVerticalMargin</item>
        <item name="android:paddingBottom">?attr/commonuiActivityVerticalMargin</item>
    </style>

    <style name="Widget.CommonUiTheme.ListEntries.FastScroll">
        <item name="android:fastScrollEnabled">true</item>
    </style>

</resources>